// Link/ append this file to
// /Users/vp/Library/Application\ Support/Cursor/User/settings.json
// Can also find this file with
// "Cmd + Shift + p" followed by "Preferences: Open user settings (JSON)"

// link to  ~/Library/Application\ Support/Cursor/User/settings.json

{
    "window.commandCenter": true,

    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.compositeKeys": {
        
    },
    "workbench.settings.applyToAllProfiles": [
        "editor.scrollBeyondLastColumn"
    ],
    
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "workbench.activityBar.iconClickBehavior": "focus",
    
    "terminal.integrated.profiles.linux": {
        "tmux": {
          "path": "/usr/bin/tmux",
          "args": ["new-session", "-A", "-s", "main"]
        }
    },
    // "terminal.integrated.defaultProfile.linux": "tmux",
    // "terminal.integrated.defaultProfile.osx": "tmux",
    "explorer.confirmDelete": false,
    "editor.scrollBeyondLastColumn": 0,
    "editor.scrollBeyondLastLine": false,
    "remote.SSH.externalSSH_ASKPASS": true,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "git.autofetch": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "explorer.confirmDragAndDrop": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.centerLayout": false,
    "zenMode.fullScreen": false,
    "zenMode.hideStatusBar": false,
    "zenMode.silentNotifications": false,
    "zenMode.restore": false,
    "zenMode.hideActivityBar": false,

    // "editor.autoClosingPairs": [
    //     {
    //         "open": "`",
    //         "close": "`",
    //         "notIn": ["string", "comment"]
    //     }
    // ],

    // Editor settings for better Python highlighting
    "editor.semanticHighlighting.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.indentation": true,

     // enable file watching
    "files.autoWatch": true,
    // experimental file watcher
    "files.useExperimentalFileWatcher": true,
    // use exec server for ssh
    "remote.SSH.useExecServer": true,
    // auto reload
    "files.autoReload": "afterDelay",

    // Hide from Explorer view
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.ipynb_checkpoints": true,
        "**/.git": true,
        "**/.venv": true,
        "**/venv": true,
        "**/wandb": true,
        "**/data/**": true,
    },

    // Exclude from file watching (saves CPU/memory)
    "files.watcherExclude": {
        "**/.git/**": true,
        "**/.venv/**": true,
        "**/wandb/**": true,
        "**/data/**": true,
    },

    // Exclude from search
    "search.exclude": {
        "**/.git/**": true,
        "**/.venv/**": true,
        "**/wandb": true,
        "**/data": true,
    },

    // Exclude from Python analysis (Pyright/Pylance)
    "python.analysis.exclude": [
        "**/__pycache__",
        "**/.mypy_cache",
        "**/.pytest_cache",
        "**/.ipynb_checkpoints",
        "**/wandb",
        "**/cpkt*",
        "**/data",
    ]

}
