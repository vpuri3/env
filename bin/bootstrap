#!/bin/bash

cd $HOME

[ ! -d ~/env ] && git clone https://github.com/vpuri3/env.git

ln -s ~/env/bin .
ln -s ~/env/.bash_profile .
ln -s ~/env/.bashrc .
ln -s ~/env/.emacs .
ln -s ~/env/.vimrc .
ln -s ~/env/.tmux.conf .

source ~/.bash_profile

chmod +x ~/env/bin/*

case `uname` in
Darwin)
	echo "xcode"
	xcode-select -p
	[ $? ] && xcode-select --install

	echo "gcc"
	gccbeclang=$(gcc -v)
	if echo "$gccbeclang" | grep -Fq "clang"; then
		echo "gcc be clang"
	fi
	;;
Linux)
	echo "todo"
	;;
esac
